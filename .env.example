# Required - Your Notion Integration Token
NOTION_API_KEY=your_notion_integration_token_here

# Optional - Server Configuration
PORT=3000

# Optional - Default pages to load in embed (comma-separated page IDs)
# Use 'mock' for sample data, leave empty for no defaults
DEFAULT_PAGE_IDS=

# Optional - Cache configuration
CACHE_TTL=300

# Optional - Default display settings
AUTO_REFRESH_DEFAULT=0
MAX_DEPTH_DEFAULT=3

# Security - Require API token validation for access (default: true)
# Set to false to disable authentication requirements
REQUIRE_TOKEN=true
